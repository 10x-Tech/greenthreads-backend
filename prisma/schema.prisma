model Product {
  id                 String               @id @default(uuid())
  productName        String
  productSlug        String
  description        String?
  originalPrice      Float
  discountPercentage Float?               @default(0)
  discountedPrice    Float?
  Vendor             Vendor?              @relation(fields: [sellerId], references: [id])
  sellerId           String?
  categories         Category[]           @relation("ProductToCategory")
  combinations       ProductCombination[]
  deliveryRange      DeliveryRange        @default(ONE_TO_THREE_DAYS)
  isActive           Boolean              @default(true)
  isNextDayDelivery  Boolean              @default(false)
  variations         Variation[]          @relation("ProductVariation")
  productImages      ProductImage[]
  previewImage       String?
  weight             Int?
  height             Int?
  length             Int?
  width              Int?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}

enum DeliveryRange {
  ONE_TO_THREE_DAYS
  THREE_TO_FIVE_DAYS
  FIVE_TO_SEVEN_DAYS
  SEVEN_TO_TEN_DAYS
  TEN_TO_FOURTEEN_DAYS
}

model Variation {
  id               String            @id @default(uuid())
  name             String            @unique
  products         Product[]         @relation("ProductVariation")
  variationOptions VariationOption[]

  @@map("variations")
}

model VariationOption {
  id          String    @id @default(uuid())
  name        String
  variationId String    @map("variation_id")
  variation   Variation @relation(fields: [variationId], references: [id])

  @@map("variation_options")
}

